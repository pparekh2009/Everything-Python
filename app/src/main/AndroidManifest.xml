<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.priyanshparekh.everythingpython">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EverythingAboutPython">

        <activity android:name="com.priyanshparekh.everythingpython.QuizActivity"
            android:parentActivityName="com.priyanshparekh.everythingpython.MainActivity"/>

        <activity
            android:name="com.priyanshparekh.everythingpython.SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.priyanshparekh.everythingpython.CompilerActivity" />

        <activity
            android:name="com.priyanshparekh.everythingpython.ProgramsListActivity"
            android:parentActivityName="com.priyanshparekh.everythingpython.MainActivity" />

        <activity android:name="com.priyanshparekh.everythingpython.MainActivity" />
    </application>

</manifest>